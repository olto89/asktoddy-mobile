{
  "expo": {
    "name": "AskToddy",
    "slug": "asktoddy-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "asktoddy",
    "description": "AI-powered construction quoting platform",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.asktoddy.mobile",
      "infoPlist": {
        "NSCameraUsageDescription": "AskToddy needs camera access to analyze your construction projects and provide accurate quotes.",
        "NSPhotoLibraryUsageDescription": "AskToddy needs photo library access to analyze your construction images and floor plans."
      }
    },
    "android": {
      "package": "com.asktoddy.mobile",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow AskToddy to access your camera to analyze construction projects.",
          "microphonePermission": false
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow AskToddy to access your photo library to analyze construction images and floor plans."
        }
      ]
    ]
  }
}
